<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fff5f5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GK&apos;s Nanodegree Apps"
        android:id="@+id/textTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/btnSpotify"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textTitle"
        android:layout_alignRight="@+id/textTitle"
        android:layout_alignEnd="@+id/textTitle"
        android:layout_alignLeft="@+id/textTitle"
        android:layout_alignStart="@+id/textTitle"
        android:background="#ff8a80"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/btnScores"
        android:background="#ff8a80"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btnSpotify"
        android:layout_alignLeft="@+id/btnSpotify"
        android:layout_alignStart="@+id/btnSpotify"
        android:layout_alignRight="@+id/btnSpotify"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignEnd="@+id/btnSpotify" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/btnLibrary"
        android:background="#ff8a80"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/btnScores"
        android:layout_alignLeft="@+id/btnScores"
        android:layout_alignStart="@+id/btnScores"
        android:layout_alignRight="@+id/btnScores"
        android:layout_alignEnd="@+id/btnScores"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/btnBuildBigger"
        android:background="#ff8a80"
        android:layout_below="@+id/btnLibrary"
        android:layout_alignLeft="@+id/btnLibrary"
        android:layout_alignStart="@+id/btnLibrary"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/btnLibrary"
        android:layout_alignEnd="@+id/btnLibrary"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/btnXYZreader"
        android:background="#ff8a80"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btnBuildBigger"
        android:layout_alignLeft="@+id/btnBuildBigger"
        android:layout_alignStart="@+id/btnBuildBigger"
        android:layout_alignRight="@+id/btnBuildBigger"
        android:layout_alignEnd="@+id/btnBuildBigger"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone My own app"
        android:id="@+id/btnCapstone"
        android:background="#ef9a9a"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btnXYZreader"
        android:layout_alignLeft="@+id/btnXYZreader"
        android:layout_alignStart="@+id/btnXYZreader"
        android:layout_alignRight="@+id/btnXYZreader"
        android:layout_alignEnd="@+id/btnXYZreader"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>
